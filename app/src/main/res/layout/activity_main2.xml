<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:orientation="vertical"
    android:background="@drawable/ic_wood">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="SIGN UP"
        android:background="#AC7736"/>


    <ImageView
        android:layout_width="232dp"
        android:layout_height="154dp"
        android:src="@drawable/notespro"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="40dp"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/border_styling"
            android:fontFamily="@font/diff_font"
            android:hint="Enter a username"
            android:padding="20dp"
            android:textColorHint="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emial_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/border_styling"
            android:fontFamily="@font/diff_font"
            android:hint="Enter email address"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColorHint="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pass_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/border_styling"
            android:fontFamily="@font/diff_font"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColorHint="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="00dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/diff_font"
        android:padding="20dp"
        android:text="READY TO GO"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>